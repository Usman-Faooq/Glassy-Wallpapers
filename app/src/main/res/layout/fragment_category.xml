                        android:textSize="20sp"
                        android:elevation="1dp"
                        android:gravity="center"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10sp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout3"
                android:paddingLeft="8sp"
                android:layout_marginTop="7sp"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="120sp"
                    app:cardBackgroundColor="#70000000"
                    android:layout_below="@id/dummytext"
                    app:cardElevation="5sp"
                    app:cardCornerRadius="5sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginRight="8sp"
                    android:layout_marginBottom="5sp"
                    android:id="@+id/cat_sports">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/cat_sport"
                        android:scaleType="fitXY"
                        android:alpha="0.5"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sports"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:elevation="1dp"
                        android:gravity="center"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10sp"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="120sp"
                    app:cardBackgroundColor="#70000000"
                    android:layout_below="@id/dummytext"
                    app:cardElevation="5sp"
                    app:cardCornerRadius="5sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginRight="8sp"
                    android:layout_marginBottom="5sp"
                    android:id="@+id/cat_entertainment">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/cat_entertainment"
                        android:scaleType="fitXY"
                        android:alpha="0.5"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Entertainment"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:elevation="1dp"
                        android:gravity="center"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10sp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout4"
                android:paddingLeft="8sp"
                android:layout_marginTop="7sp"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="120sp"
                    app:cardBackgroundColor="#70000000"
                    android:layout_below="@id/dummytext"
                    app:cardElevation="5sp"
                    app:cardCornerRadius="5sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginRight="8sp"
                    android:layout_marginBottom="5sp"
                    android:id="@+id/cat_vehicles">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/cat_vehicle"
                        android:scaleType="fitXY"
                        android:alpha="0.5"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vehicles"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:elevation="1dp"
                        android:gravity="center"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10sp"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="120sp"
                    app:cardBackgroundColor="#70000000"
                    android:layout_below="@id/dummytext"
                    app:cardElevation="5sp"
                    app:cardCornerRadius="5sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginRight="8sp"
                    android:layout_marginBottom="5sp"
                    android:id="@+id/cat_space">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/cat_space"
                        android:scaleType="fitXY"
                        android:alpha="0.5"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Space"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:elevation="1dp"
                        android:gravity="center"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10sp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout5"
                android:paddingLeft="8sp"
                android:layout_marginTop="7sp"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cat_mountain"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="120sp"
                    app:cardBackgroundColor="#70000000"
                    android:layout_below="@id/dummytext"
                    app:cardElevation="5sp"
                    app:cardCornerRadius="5sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginRight="8sp"
                    android:layout_marginBottom="5sp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/cat_mountain"
                        android:scaleType="fitXY"
                        android:alpha="0.5"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mountain"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:elevation="1dp"
                        android:gravity="center"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10sp"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cat_beach"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="120sp"
                    app:cardBackgroundColor="#70000000"
                    android:layout_below="@id/dummytext"
                    app:cardElevation="5sp"
                    app:cardCornerRadius="5sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginRight="8sp"
                    android:layout_marginBottom="5sp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/cat_beach"
                        android:scaleType="fitXY"
                        android:alpha="0.5"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Beach"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:elevation="1dp"
                        android:gravity="center"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10sp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


        </RelativeLayout>

    </ScrollView>


</FrameLayout>