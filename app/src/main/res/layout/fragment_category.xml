<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".fragment.FragmentCategory">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/dummytext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="8sp"
                android:layout_marginBottom="2sp"
                android:fontFamily="@font/acme"
                android:text="Categories"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dummytext"
                android:paddingLeft="8sp"
                android:layout_marginTop="7sp"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cat_abstract"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="120sp"
                    app:cardBackgroundColor="#70000000"
                    android:layout_below="@id/dummytext"
                    app:cardElevation="5sp"
                    app:cardCornerRadius="5sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginRight="8sp"
                    android:layout_marginBottom="5sp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/cat_abstract"
                        android:scaleType="fitXY"
                        android:alpha="0.5"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Abstract"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:elevation="1dp"
                        android:gravity="center"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10sp"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="120sp"
                    app:cardBackgroundColor="#70000000"
                    android:layout_below="@id/dummytext"
                    app:cardElevation="5sp"
                    app:cardCornerRadius="5sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginRight="8sp"
                    android:layout_marginBottom="5sp"
                    android:id="@+id/cat_animals">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/cat_animal"
                        android:scaleType="fitXY"
                        android:alpha="0.5"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Animals"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:elevation="1dp"
                        android:gravity="center"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10sp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout1"
                android:paddingLeft="8sp"
                android:layout_marginTop="7sp"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="120sp"
                    app:cardBackgroundColor="#70000000"
                    android:layout_below="@id/dummytext"
                    app:cardElevation="5sp"
                    app:cardCornerRadius="5sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginRight="8sp"
                    android:layout_marginBottom="5sp"
                    android:id="@+id/cat_drinks">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/cat_drink"
                        android:scaleType="fitXY"
                        android:alpha="0.5"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Drinks"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:elevation="1dp"
                        android:gravity="center"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10sp"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="120sp"
                    app:cardBackgroundColor="#70000000"
                    android:layout_below="@id/dummytext"
                    app:cardElevation="5sp"
                    app:cardCornerRadius="5sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginRight="8sp"
                    android:layout_marginBottom="5sp"
                    android:id="@+id/cat_tech">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/cat_tech"
                        android:scaleType="fitXY"
                        android:alpha="0.5"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Technology"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:elevation="1dp"
                        android:gravity="center"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10sp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout2"
                android:paddingLeft="8sp"
                android:layout_marginTop="7sp"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="120sp"
                    app:cardBackgroundColor="#70000000"
                    android:layout_below="@id/dummytext"
                    app:cardElevation="5sp"
                    app:cardCornerRadius="5sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginRight="8sp"
                    android:layout_marginBottom="5sp"
                    android:id="@+id/cat_food">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/cat_food"
                        android:scaleType="fitXY"
                        android:alpha="0.5"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Food"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:elevation="1dp"
                        android:gravity="center"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10sp"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="120sp"
                    app:cardBackgroundColor="#70000000"
                    android:layout_below="@id/dummytext"
                    app:cardElevation="5sp"
                    app:cardCornerRadius="5sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginRight="8sp"
                    android:layout_marginBottom="5sp"
                    android:id="@+id/cat_nature">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/cat_nature"
                        android:scaleType="fitXY"
                        android:alpha="0.5"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nature"
